<h1>Listing Episodes for <%= @show.name %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Show</th>
      <th>Title</th>
      <th>Season</th>
      <th>Episode</th>
      <th>Published</th>
      <th>Downloads</th>
    </tr>
  </thead>

  <tbody>
    <%= render :partial => 'episode',
      :collection => @episodes,
      :locals => { :file_formats => @file_formats } %>
  </tbody>
</table>

<br/>

<p><%= link_to 'Back to shows', shows_path %></p>
