<h1>Welcome to Saxon's TV Torrents App</h1>
<% if current_user -%>
<h3>Recent Episodes</h3>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Show</th>
      <th>Title</th>
      <th>Season</th>
      <th>Episode</th>
      <th>Published</th>
      <th>Downloads</th>
    </tr>
  </thead>

  <tbody>
    <%= render :partial => 'episodes/episode',
               :collection => @recent_episodes,
               :as => :episode,
               :locals => { :file_formats => @file_formats } %>
 </tbody>
</table>
<% else -%>
  <p>You are not authorized to see this content</p>
<% end -%>
